<h3>Form_for</h3>

<% @errors && @errors.each do |e|%>
  <li><%= e %></li>
<%end%>

<%=form_for(@todo) do |f|%>
  <%=f.label("Todo Name:") %>
  <%=f.text_field(:content) %>


  <%=f.fields_for :states do |s| %>
      <%=s.label "Priority:"%>
      <%=s.text_field :priority%>
      <%=s.hidden_field :user_id, value: current_user.id%>
  <%end%>

  <%=f.submit "Submit"%>
<%end%> 
