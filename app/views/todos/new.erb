<h3>Form_for</h3>

<% @errors && @errors.each do |e|%>
  <li><%= e %></li>
<%end%>

<%=form_for(@todo) do |f|%>
  <%=f.label("Todo Name:") %>
  <%=f.text_field(:content) %>


  <%=f.fields_for :states do |m| %>
      <%=m.label "Priority:"%>
      <%=m.text_field :priority%>
  <%end%>

  <%=f.submit "Submit"%>
<%end%> 
